<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.okcu.imagefx.ImageFXController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox>
        <ImageView fx:id="imgPhoto" fitHeight="400.0" fitWidth="400.0" preserveRatio="true" />
        <ImageView fx:id="imgPhotoEditied" fitHeight="400.0" fitWidth="400.0" preserveRatio="true" />
    </HBox>
    <Button text="Load" onAction="#onLoadButtonClick"/>
    <Button text="Convert to Grayscale" onAction="#onConvertGrayScaleClick"/>
</VBox>
